<h1>Listing facturas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Identificacion</th>
      <th>Telefono</th>
      <th>Producto</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Total</th>
      <th>Cantidad</th>
      <th>Iva</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.nombre %></td>
        <td><%= factura.apellido %></td>
        <td><%= factura.identificacion %></td>
        <td><%= factura.telefono %></td>
        <td><%= factura.producto %></td>
        <td><%= factura.descripcion %></td>
        <td><%= factura.fecha %></td>
        <td><%= factura.total %></td>
        <td><%= factura.cantidad %></td>
        <td><%= factura.iva %></td>
        <td><%= factura.valor %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

