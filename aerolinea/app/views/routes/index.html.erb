<p id="notice"><%= notice %></p>

<h1>Lista Rutas</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Informacion rutas</div>
  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Origen</th>
      <th>Destino</th>
      <th>Horario salida</th>
      <th>Duracion aprox</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.origen %></td>
        <td><%= route.destino %></td>
        <td><%= route.horario_salida %></td>
        <td><%= route.duracion_aprox %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva ruta', new_route_path %>
