  <!-- Default panel contents -->
  <div class="panel-heading">Tequetes</div>
  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Identificacion</th>
      <th>Edad</th>
