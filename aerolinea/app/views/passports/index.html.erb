<p id="notice"><%= notice %></p>

<h1>Lista Tiquetes</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Tequetes</div>
  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Precio</th>
      <th>Route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passports.each do |passport| %>
      <tr>
        <td><%= passport.tipo %></td>
        <td><%= passport.precio %></td>
        <td><%= passport.route_id %></td>
        <td><%= link_to 'Show', passport %></td>
        <td><%= link_to 'Edit', edit_passport_path(passport) %></td>
        <td><%= link_to 'Destroy', passport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo Tiquete', new_passport_path %>
