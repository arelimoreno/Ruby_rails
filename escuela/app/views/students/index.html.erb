<p id="notice"><%= notice %></p>

<h1>Lista Estudiantes</h1>

<table>
  <thead>
    <tr>
    <th>Perfil</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Identificacion</th>
      <th>Fecha nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
      <td><%= image_tag(student.foto_url, :width => 70, :height => 70) if student.foto? %></td>
        <td><%= student.nombre %></td>
        <td><%= student.apellido %></td>
        <td><%= student.identificacion %></td>
        <td><%= student.fecha_nacimiento %></td>
        <td><%= link_to 'Mirar', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Eliminar', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Ver tareas', homeworks_path %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

