<p id="notice"><%= notice %></p>

<h1>Lista de respuestas</h1>

<table>
  <thead>
    <tr>
    <th>studiante</th>
      <th>Tarea</th>
      <th>Respuesta</th>
      <th>observacion</th>      
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.student_id %></td>
        <td><%= answer.homework.tema %></td>
        <td><%= answer.respuesta %></td>
        <td><%= answer.nombre %></td>       
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New respuesta', new_answer_path %>




