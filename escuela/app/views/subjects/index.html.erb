<p id="notice"><%= notice %></p>

<h1>Listas de Asignaturas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.codigo %></td>
        <td><%= subject.nombre %></td>
        <td><%= link_to 'Mostrar', subject %></td>
        <td><%= link_to 'Editar', edit_subject_path(subject) %></td>
        <td><%= link_to 'Eliminar', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva asignatura', new_subject_path %>
