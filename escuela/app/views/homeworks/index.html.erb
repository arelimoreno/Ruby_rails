<p id="notice"><%= notice %></p>

<h1>Lista de Tareas</h1>

<table>
  <thead>
    <tr>
      <th>Tema</th>
      <th>Pregunta</th>
      <th>Asignatura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.tema %></td>
        <td><%= homework.pregunta %></td>
         <td><%= homework.subject.nombre %></td> 
        <td><%= link_to 'Mirar', homework %></td>
        <td><%= link_to 'Editar', edit_homework_path(homework) %></td>
        <td><%= link_to 'Eliminar', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Responder tareas', answers_path%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

